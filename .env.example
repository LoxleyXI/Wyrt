# Wyrt Server Environment Variables
# Copy this file to .env and configure your values
# DO NOT commit .env to git (it contains secrets)

# ============================================
# OAuth Configuration
# ============================================

# JWT Secret for OAuth sessions (generate a secure random string)
OAUTH_JWT_SECRET=wyrt-oauth-secret-change-in-production

# Discord OAuth
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_CALLBACK_URL=http://localhost:4040/oauth/discord/callback

# Google OAuth (optional)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GOOGLE_CALLBACK_URL=http://localhost:4040/oauth/google/callback

# Steam OAuth (optional)
# STEAM_API_KEY=your-steam-api-key
# STEAM_CALLBACK_URL=http://localhost:4040/oauth/steam/callback

# ============================================
# Database Configuration
# ============================================

# MySQL/MariaDB connection
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=root
# DB_PASSWORD=
# DB_NAME=wyrt

# ============================================
# Server Configuration
# ============================================

# WebSocket port (default: 8080)
# WS_PORT=8080

# HTTP API port (default: 4040)
# HTTP_PORT=4040

# CORS origins (comma-separated, default allows localhost)
# CORS_ORIGINS=http://localhost:8000,http://localhost:8001,http://localhost:3000
